= render :partial => "item-action"
=form_for @company, :html => {:class => "tight_form", :multipart => true } do |f|
  #logocol
    = image_tag @company.logo_url(:medium).to_s if @company.logo?
  %article.company_profile

    = f.error_messages

    %article.company
      %h1= @company.name
      %p
        = f.label :logo, "Ein anderes Logo hochladen"
        %br
        = f.file_field :logo, :name => "Logo"
      %p
        = f.label :teaser, "Byline"
        %br
        = f.text_field :teaser
      %p
        = f.label :tag_list, "Keywords"
        %br
        = f.text_field :tag_list
      -#%p
        -#= f.label :address, "Adresse"
        -#%br
        -#= f.text_area :address, :street

      = f.fields_for :addresses do |address_fields|
        %p
          = label :street, "Strasse"
          %br
          =address_fields.text_field :street
          %br
          = label :plz, "Postleitzahl"
          =address_fields.text_field :plz
          %br/
          = label :city, "Stadt"
          =address_fields.text_field :city
          %br/
          = label :country, "Land"
          =address_fields.text_field :country

      %p
        = f.label :phone, "Telefon"
        %br
        = f.text_field :phone
      %p
        = f.label :email, "e-Mail"
        %br
        = f.text_field :email
      %p
        = f.label :website, "Webseite"
        %br
        = f.text_field :website
      %p
        = f.label :googleplus, "Google+ Firmenaccount"
        %br
        = f.text_field :googleplus
      %p
        = f.label :facebook, "Facebook Firmenaccount"
        %br
        = f.text_field :facebook
      %p
        = f.label :twitter, "Twitter Firmenaccount"
        %br
        = f.text_field :twitter

      %p
        = f.label :history, "Ãœber uns"
        %br
        = f.text_area :history
      %p
        = f.label :staff, "Mitarbeiter"
        %br
        = f.text_field :staff
      = f.submit "Speichern", :class => "button light"
