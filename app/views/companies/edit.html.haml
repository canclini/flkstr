-title "Firmendaten editieren"

=simple_form_for @company, :html => { :multipart => true } do |f|
  = f.error_messages  
  
  =f.input :name
  =f.input :logo
  =f.input :teaser
  =f.input :tag_list
  
  %h3 addresses
  = f.simple_fields_for :addresses do |builder|
    = render "addresses/address_fields", :f => builder
    
  %h3 more details
  = f.input :phone
  = f.input :fax
  = f.input :email
  = f.input :twitter
  = f.input :website, :as => :url
  = f.input :staff, :input_html => {:min => 1, :step => 1}
    
  %h3 tell us about your company
  = f.input :history

  %p= f.submit "Speichern", :class => "button light"