- title(t('startpage.title'))
.tagline
  %h2= link_to t('startpage.tagline1'), flockstreet_path()
.tagline
  %h2= link_to t('startpage.tagline2'), plans_path()

#actionbutton
  - if $app_state == 'website'
    =link_to t('startpage.register_beta'), register_path(), :class => "big_button call2action"
  -else
    =link_to t('startpage.try'), register_path(), :class => "big_button call2action"
 
- if show_title?
  %h1=h yield(:title)


.leftmiddle
  %video{ :controls => "", :width => "640", :height => "360"}  
    %source{:src => "http://s3.amazonaws.com/flkstr/movies/flockstreet_schulterblick.m4v", :type=> "video/mp4"}/
    %source{:src=>"http://s3.amazonaws.com/flkstr/movies/flockstreet_schulterblick.ogv", :type=> "video/ogg"}/

    %object{:width=>"640", :height=>"360", :type=>"application/x-shockwave-flash", :data=>"/player.swf" }
      %param{:name=>"movie", :value=>"/player.swf"}	
      %param{:name=>"flashvars", :value=>'controlbar=over&amp;file=http://s3.amazonaws.com/flkstr/movies/flockstreet_schulterblick.m4v'}
  
  %h4.byline
    Weit hinten, hinter den
    =link_to "Aufträge erfassen", "#"
    fern der Länder
    =link_to "Leads generieren", "#"
    und Konsonantien leben die Blindtexte. Abgeschieden wohnen Sie in
    =link_to "Kontakte knüpfen", "#"
    an der Küste des Semantik, eines großen Sprachozeans.
    =link_to "Take a tour.", tour_profile_path()
.right
  .twitterwall
    %h3 Twitter Wall
    #twitter
    %h4=link_to t('startpage.twitter'), "http://twitter.com/flockstreet"
  
- content_for :columns do
  .left
    %h3= t('teaser.left.title')
    %p= t('teaser.left.paragraph')
    %br
    %h4=link_to t('teaser.link'), "#"
  .middle
    %h3= t('teaser.middle.title')
    %p= t('teaser.middle.paragraph')
    %h4=link_to t('teaser.link'), "#"
  .right
    %h3= t('teaser.right.title')
    %p=t('teaser.right.paragraph')
    %br
    %h4=link_to t('teaser.link'), "#"
