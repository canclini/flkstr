- title("Passwort Ändern")
%h3= resource.email
= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f|
  = devise_error_messages!
  %p
    = f.label "Jetziges Passwort"
    %i (wir brauchen dein jetztigs Passwort um das neue zu bestätigen)
    %br/
    = f.password_field :current_password
  %p
    = f.label "Neues Passwort"
    %i (leer lassen wenn du es nicht ändern möchtest)
    %br/
    = f.password_field :password
  %p
    = f.label "Neues Passwort bestätigen"
    %br/
    = f.password_field :password_confirmation
  %p
    = f.label "Notify schedule"
    %br/
    = f.collection_select :notify, User::NOTIFY, :to_s, :humanize
    
  %p
    = f.label "Notify about"
    %br/
    - for notifier in User::NOTIFIERS
      =check_box_tag "user[notifiers][]", notifier, resource.notifiers.include?(notifier)
      =notifier.humanize
    =hidden_field_tag "user[notifiers][]"
    
    
  %p= f.submit "Speichern"