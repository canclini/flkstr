<!DOCTYPE html>
%html
  %head
    %meta{:charset=>"UTF-8"}
    %title= "flockstreet"
    = render :partial => 'layouts/includes'
    = javascript_include_tag "http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js", "application", "jquery.rails"  
    = csrf_meta_tag

  %body
    #wrapper
      #header-meta-container
        #header-meta
          #header-meta-logo
            = link_to image_tag("3birds_signet.png", :border => 0), dashboard_url
          #header-meta-actionbox
            = render :partial => 'actionbox/actionbox'
          = render :partial => 'nav/user'
  
      #header-content-container
        #header-content
          #header-content-logo
            
        - flash.each do |name, msg|
          = content_tag :div, msg, :id => "flash_#{name}"

      #container
        #navigation
          #dashboard
            =link_to "Dashboard", dashboard_path()
          #maintopics
            = render :partial => 'layouts/maintopics'
          #mainaction
            =link_to "Neuer Auftrag", new_request_path, :class => 'button'
        #content_dashboard
          = yield
      #push_footer
    #footer-copy-container
      #footer-copy
        =link_to "GINETTAâ„¢ WEB/DESIGN", "http://www.ginetta.ch", :class => "transition"
